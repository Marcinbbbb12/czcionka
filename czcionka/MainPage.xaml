<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="czcionka.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label 
                Text="Właściwości czcionki"
                BackgroundColor="green"
                    Style="{StaticResource Headline}"
                />

            <StackLayout Orientation="Horizontal">
                <Label Text="Rozmiar: "/>
                <Label x:Name="SizeValueLabel" Text="20" />
            </StackLayout>

            <Slider x:Name="SizeSlider"
                Maximum="100" 
                Minimum="10" 
                Value="20"
                ValueChanged="OnSliderValueChanged" 
                />


            <Label
    x:Name="QuoteLabel"
    Text="Dzień dobry" 
    

    />

            <Button
                WidthRequest="45"
                x:Name="ChangeTextBtn" 
                Text=">>" 
                BackgroundColor="Green"
                Clicked="OnChangeTextClicked" 
                HorizontalOptions="Fill" />


            <Label 
    Text="Zmien kolor tekstu"
        x:Name="ColorLabel"
        Style="{StaticResource Headline}"
    />
            <Slider x:Name="SizeSlider2"
     Maximum="100" 
     Minimum="10" 
     Value="20"
     ValueChanged="OnSliderValueChanged1" 
     />

            <Image
                    x:Name="planeImage"
                    Source="https://media.tenor.com/Mj_mEl4XbFQAAAAi/enojado.gif"
                    WidthRequest="100"
                    HeightRequest="100" />
            <Image
                    x:Name="planeImage"
                    Source="https://media.tenor.com/HGU35plB5gUAAAAi/animals.gif"
                    WidthRequest="100"
                    HeightRequest="100" />
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>